<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingStart="24dp"

    android:paddingEnd="24dp"

    android:paddingTop="24dp"

    android:paddingBottom="24dp"

    android:background="@color/white"

    tools:context=".LoginActivity">


    <!-- Logo Image -->

    <ImageView

        android:id="@+id/imageView"

        android:layout_width="323dp"

        android:layout_height="179dp"

        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"

        android:layout_marginBottom="24dp"

        app:srcCompat="@drawable/logonprmproject" /> <!-- Replace with your logo image -->




    <TextView

        android:id="@+id/textUnderLogo"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_below="@id/imageView"

        android:layout_marginTop="14dp"

        android:layout_centerHorizontal="true"

        android:text="Đăng nhập"

        android:textColor="@color/retro_text"

        android:textSize="32sp"

        android:textStyle="bold" />


    <TextView

        android:id="@+id/txtUsername"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/textUnderLogo"

        android:layout_marginTop="40dp"

        android:text="Tên tài khoản:"

        android:textColor="@color/retro_text"

        android:textSize="16sp" />


    <!-- Username Input -->

    <EditText

        android:id="@+id/username"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/txtUsername"

        android:layout_marginTop="8dp"

        android:background="@drawable/retro_input"

        android:padding="14dp"

        android:textColor="@color/retro_text"

        android:textSize="16sp" />


    <!-- Password Label -->

    <TextView

        android:id="@+id/txtPassword"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/username"

        android:layout_marginTop="16dp"

        android:text="Mật khẩu:"

        android:textColor="@color/retro_text"

        android:textSize="16sp" />


    <!-- Password Input -->

    <EditText

        android:id="@+id/password"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/txtPassword"

        android:layout_marginTop="8dp"

        android:background="@drawable/retro_input"

        android:inputType="textPassword"

        android:padding="14dp"

        android:textColor="@color/retro_text"

        android:textSize="16sp" />


    <!-- Login Button -->

    <Button

        android:id="@+id/btnSignin"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/password"

        app:backgroundTint="@null"

        android:layout_marginTop="24dp"

        android:background="@drawable/retro_button"


        android:padding="14dp"

        android:text="Đăng nhập"

        android:textColor="@color/white"

        android:textSize="18sp"

        android:textStyle="bold" />


    <!-- Signup Button -->

    <Button

        android:id="@+id/btnSignup"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/btnSignin"

        android:layout_marginTop="16dp"

        android:background="@drawable/retro_button_secondary"

        app:backgroundTint="@null"

        android:padding="12dp"

        android:text="Đăng ký tài khoản mới"

        android:textColor="@color/white"

        android:textSize="14sp" />


</RelativeLayout>