<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="312dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/logonprmproject" />

    <!-- ScrollView để cuộn được nếu nội dung dài -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="12dp"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textUnderLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Đăng ký"
                android:textColor="@color/retro_text"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Họ và tên -->
            <TextView
                android:id="@+id/labelFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ và Tên"
                android:textColor="@color/retro_text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/retro_input"
                android:padding="14dp"
                android:textColor="@color/retro_text"
                android:textSize="16sp" />

            <!-- Email -->
            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:textColor="@color/retro_text"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/retro_input"
                android:textColor="@color/retro_text" />

            <!-- Số điện thoại -->
            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="16sp"
                android:textColor="@color/retro_text"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/retro_input"
                android:textColor="@color/retro_text" />

            <!-- Tên đăng nhập -->
            <TextView
                android:id="@+id/labelUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textSize="16sp"
                android:textColor="@color/retro_text"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/retro_input"
                android:textColor="@color/retro_text" />

            <!-- Mật khẩu -->
            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textSize="16sp"
                android:textColor="@color/retro_text"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/retro_input"
                android:textColor="@color/retro_text" />

            <!-- Nhập lại mật khẩu -->
            <TextView
                android:id="@+id/labelRePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhập lại mật khẩu"
                android:textSize="16sp"
                android:textColor="@color/retro_text"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/retro_input"
                android:textColor="@color/retro_text" />

            <!-- Nút đăng ký -->
            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="14dp"
                app:backgroundTint="@null"
                android:background="@drawable/retro_button"
                android:textColor="@color/white"
                android:layout_marginTop="30dp" />

            <!-- Nút đăng nhập -->
            <Button
                android:id="@+id/btnSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/retro_button_secondary"
                android:padding="10dp"
                app:backgroundTint="@null"
                android:text="Đã có tài khoản? Đăng nhập ngay."
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
